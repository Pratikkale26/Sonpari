// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum KycStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum GroupRole {
  ADMIN
  MEMBER
}

enum TransactionType {
  SAVE
  GIFT_SENT
  GIFT_RECEIVED
}

enum GiftStatus {
  PENDING
  COMPLETED
  FAILED
}

enum ContributionStatus {
  PLEDGED
  PAID
  FAILED
}

enum ProposalStatus {
  OPEN
  CLOSED
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  phone    String? @unique
  name     String?

  kycStatus    KycStatus @default(PENDING)
  kycHash      String?
  grailUserId  String? // Oro user PDA address
  solanaWallet String? // Connected wallet address

  streakCount      Int       @default(0)
  lastSaveDate     DateTime?
  pushSubscription String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  kycData               KycData?
  groupMemberships      GroupMember[]
  savings               SavingsTransaction[]
  giftsSent             Gift[]                 @relation("GiftSender")
  giftsReceived         Gift[]                 @relation("GiftRecipient")
  giftContributions     GiftContribution[]
  streak                Streak?
  proposalContributions ProposalContribution[]
}

model KycData {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  email    String
  fullName String

  submittedAt DateTime @default(now())
}

model Group {
  id          String  @id @default(cuid())
  name        String
  description String?
  inviteCode  String  @unique

  createdAt DateTime @default(now())

  members   GroupMember[]
  gifts     Gift[]
  proposals GroupProposal[]
}

model GroupMember {
  groupId  String
  group    Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)
  userId   String
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  role     GroupRole @default(MEMBER)
  joinedAt DateTime  @default(now())

  @@id([groupId, userId])
}

model GroupProposal {
  id        String         @id @default(cuid())
  groupId   String
  group     Group          @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdBy String
  occasion  String?
  message   String?
  deadline  DateTime?
  status    ProposalStatus @default(OPEN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contributions ProposalContribution[]
}

model ProposalContribution {
  id         String             @id @default(cuid())
  proposalId String
  proposal   GroupProposal      @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  userId     String
  user       User               @relation(fields: [userId], references: [id])
  goldGrams  Decimal
  grailTxnId String?
  status     ContributionStatus @default(PLEDGED)
  paidAt     DateTime?

  createdAt DateTime @default(now())
}

model SavingsTransaction {
  id             String          @id @default(cuid())
  userId         String
  user           User            @relation(fields: [userId], references: [id])
  grailTxnId     String?
  goldGrams      Decimal
  goldPriceAtTxn Decimal
  type           TransactionType

  createdAt DateTime @default(now())
}

model Gift {
  id              String     @id @default(cuid())
  senderUserId    String
  senderUser      User       @relation("GiftSender", fields: [senderUserId], references: [id])
  recipientUserId String?
  recipientUser   User?      @relation("GiftRecipient", fields: [recipientUserId], references: [id])
  recipientPhone  String?
  groupId         String?
  group           Group?     @relation(fields: [groupId], references: [id])
  message         String?
  occasion        String?
  status          GiftStatus @default(PENDING)

  createdAt DateTime @default(now())

  contributions GiftContribution[]
}

model GiftContribution {
  id                String             @id @default(cuid())
  giftId            String
  gift              Gift               @relation(fields: [giftId], references: [id], onDelete: Cascade)
  contributorUserId String
  contributorUser   User               @relation(fields: [contributorUserId], references: [id])
  goldGrams         Decimal
  grailTxnId        String?
  status            ContributionStatus @default(PLEDGED)
  paidAt            DateTime?

  createdAt DateTime @default(now())
}

model Streak {
  id            String    @id @default(cuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  currentStreak Int       @default(0)
  longestStreak Int       @default(0)
  lastSaveDate  DateTime?

  updatedAt DateTime @updatedAt
}
